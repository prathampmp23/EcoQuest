<% layout("layouts/boilerplate") %>

<style>
  /* General Styling */
  body {
    background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    font-family: 'Arial', sans-serif;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Card Styling */
  .card {
    background: #fff;
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }

  .card h2 {
    font-size: 2rem;
    color: #1e3c72;
    font-weight: bold;
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 1px;
    
  }

  /* Form Styling */
  .form-label {
    font-size: 1.1rem;
    color: #2a5298;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .form-control,
  .form-control:focus {
    border-radius: 10px;
    border: 2px solid #81d4fa;
    padding: 12px;
    font-size: 1rem;
    box-shadow: none;
    transition: border-color 0.3s ease;
  }

  .form-control:focus {
    border-color: #4caf50;
    outline: none;
  }

  textarea.form-control {
    resize: vertical;
    min-height: 100px;
  }

  .invalid-feedback {
    font-size: 0.9rem;
    color: #ef5350;
    margin-top: 5px;
  }

  /* Button Styling */
  .btn-success {
    background: #4caf50;
    border: none;
    padding: 14px;
    font-size: 1.2rem;
    font-weight: bold;
    border-radius: 50px;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  .btn-success:hover {
    background: #388e3c;
    transform: scale(1.05);
  }

  /* Back Link */
  .back-link {
    display: inline-block;
    margin-top: 20px;
    font-size: 1rem;
    color: #2a5298;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: #4caf50;
    text-decoration: underline;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .card {
      padding: 20px;
    }
    .card h2 {
      font-size: 1.5rem;
    }
    .btn-success {
      font-size: 1rem;
      padding: 12px;
    }
  }
</style>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg p-4">
          <h2 class="text-center mb-4">Log Plastic Waste Collection</h2>

          <form action="/logs/submit" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                id="description"
                name="description"
                class="form-control"
                placeholder="Briefly describe the waste collected (e.g., 10 plastic bottles from park)"
                rows="3"
                required
              ></textarea>
              <div class="invalid-feedback">Please provide a description.</div>
            </div>

            <!-- Weight Input -->
            <div class="mb-3">
              <label for="weight" class="form-label">Weight (kg)</label>
              <input
                type="number"
                step="0.1"
                id="weight"
                name="weight"
                class="form-control"
                placeholder="Enter weight (e.g., 0.5 kg)"
                required
              />
              <div class="invalid-feedback">Please enter the weight in kg.</div>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
              <label for="image" class="form-label">Upload Image (Required)</label>
              <input
                type="file"
                id="image"
                name="image"
                class="form-control"
                accept="image/*"
                required
              />
              <div class="invalid-feedback">Please upload an image of the collected waste.</div>
            </div>

            <!-- Recycling Center (Optional) -->
            <div class="mb-3">
              <label for="recyclingCenter" class="form-label">Recycling Center (Optional)</label>
              <input
                type="text"
                id="recyclingCenter"
                name="recyclingCenter"
                class="form-control"
                placeholder="e.g., Green Recycling Hub"
              />
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success w-100">Submit Log</button>
          </form>

          <!-- Back to Dashboard -->
          <p class="text-center mt-3">
            <a href="/dashboard" class="back-link">Back to Dashboard</a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Bootstrap Form Validation (unchanged)
    (function () {
      "use strict";
      const forms = document.querySelectorAll(".needs-validation");
      Array.from(forms).forEach((form) => {
        form.addEventListener(
          "submit",
          (event) => {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add("was-validated");
          },
          false
        );
      });
    })();
  </script>
</body>