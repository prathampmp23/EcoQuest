<% layout("layouts/boilerplate") %>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }
    .recycle_container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #f4f4f4;
        padding: 1.25rem;
        min-height: 100vh;
    }
    .image-container {
        width: 90%;
        max-width: 75rem;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1.25rem;
    }
    .image-card {
        background: white;
        padding: 0.9375rem;
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 18.75rem;
    }
    .image-card img {
        width: 100%;
        height: auto;
        border-radius: 0.5rem;
    }
    .image-card h3 {
        margin: 0.625rem 0;
        color: #333;
    }
    .image-card p {
        color: #666;
        margin: 0.3125rem 0;
    }
    .location-btn {
        display: inline-block;
        padding: 0.625rem 0.9375rem;
        margin-top: 0.625rem;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 0.3125rem;
        transition: 0.3s;
    }
    .location-btn:hover {
        background: #0056b3;
    }
    @media (max-width: 48rem) {
        .image-container {
            flex-direction: column;
            align-items: center;
        }
    }
</style>

<body>
    <div class="recycle_container">
        <div class="image-container">
            <div class="image-card">
                <img src="image1.jpg" alt="Image 1">
                <h3>Location Name 1</h3>
                <p>Time: 10:00 AM - 6:00 PM</p>
                <a href="#" class="location-btn">Locate</a>
            </div>
            <div class="image-card">
                <img src="image2.jpg" alt="Image 2">
                <h3>Location Name 2</h3>
                <p>Time: 9:00 AM - 5:00 PM</p>
                <a href="#" class="location-btn">Locate</a>
            </div>
            <div class="image-card">
                <img src="image3.jpg" alt="Image 3">
                <h3>Location Name 3</h3>
                <p>Time: 8:00 AM - 4:00 PM</p>
                <a href="#" class="location-btn">Locate</a>
            </div>
        </div>
    </div>
</body>

