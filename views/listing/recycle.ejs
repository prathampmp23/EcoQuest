<% layout("layouts/boilerplate") %>
<style>
    /* Card Container */
    .custom-card-wrapper {
     display: flex;
     flex-wrap: wrap; /* Row break hone ke liye */
     justify-content: center;
     gap: 1.25rem; /* 20px → 1.25rem */
     max-width: 43.75rem; /* 700px → 43.75rem */
     margin: auto;
     padding: 1.25rem; /* 20px → 1.25rem */ 
   }
 
   /* Individual Card */
   .custom-card {
     display: flex;
     flex-direction: row; /* Button ko neeche fix rakhne ke liye */
     align-items: start;
     background: white;
     border-radius: 0.625rem;
     box-shadow: 0 0.25rem 0.375rem rgba(0, 0, 0, 0.1);
     padding: 0.9375rem;
     width: 100%;
     min-width: 17.5rem;
     height: 10rem;
     position: relative;
   }
 
   /* Image */
   .custom-card-img {
     width: 8rem;
     height: 8rem;
     border-radius: 10%;
     object-fit: cover;
     margin-bottom: 0.5rem;
   }
 
   /* Info Section */
   .custom-card-info {
     flex-grow: 1; /* Info ko upar rakhne ke liye */
     margin-left: 2rem;
   }
 
   .custom-card-info h3 {
     margin-bottom: 0.3125rem;
     font-size: 1.125rem;
   }
   .custom-card-info p {
     font-size: 0.875rem;
     color: gray;
   }
 
   /* Button */
   .custom-card-btn {
     background-color: #007bff;
     color: white;
     padding: 0.5rem 1rem;
     border: none;
     border-radius: 0.3125rem;
     cursor: pointer;
     position: absolute;
     bottom: 0.75rem;
     right: 0.75rem;
   }
 
   .custom-card-btn:hover {
     background-color: #0056b3;
   }
 
   /* Responsive: Mobile pe ek ek card neeche shift hoga */
   @media (max-width: 37.5rem) { /* 600px → 37.5rem */
     .custom-card {
       width: 100%;
     }
   }
 </style>
 
 <body>
