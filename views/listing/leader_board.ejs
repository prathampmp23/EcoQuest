<% layout("layouts/boilerplate") %>
<style>
    /* Leaderboard Container */
    .leaderboard {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      max-width: 50rem;
      margin: auto;
      padding: 1.25rem;
    }
  
    /* Individual Leaderboard Entry */
    .leaderboard-entry {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: white;
      border-radius: 0.625rem;
      box-shadow: 0 0.25rem 0.375rem rgba(0, 0, 0, 0.1);
      padding: 1rem;
      width: 100%;
    }
  
    /* Information Section */
    .leaderboard-info {
      flex-grow: 1;
    }
  
    .leaderboard-info h3 {
      margin-bottom: 0.3125rem;
      font-size: 1.25rem;
    }
  
    .leaderboard-info p {
      font-size: 0.875rem;
      color: gray;
    }
  
    /* Profile Image */
    .leaderboard-img {
      width: 4rem;
      height: 4rem;
      border-radius: 50%;
      object-fit: cover;
      margin-left: 1rem;
    }
  
    /* Responsive: Adjustments for small screens */
    @media (max-width: 37.5rem) {
      .leaderboard-entry {
        flex-direction: column;
        align-items: flex-start;
      }
      .leaderboard-img {
        margin-left: 0;
        margin-top: 0.5rem;
      }
    }
  </style>
  
  <div class="leaderboard">
    <div class="leaderboard-entry">
      <div class="leaderboard-info">
        <h3>John Doe</h3>
        <p>🏆 Rank: #1</p>
        <p>🗑 Waste Collected: 150 kg</p>
        <p>🎖 Badges Earned: Eco Warrior, Recycler</p>
      </div>
      <img class="leaderboard-img" src="/images/user1.jpg" alt="John Doe" />
    </div>
  
    <div class="leaderboard-entry">
      <div class="leaderboard-info">
        <h3>Jane Smith</h3>
        <p>🏆 Rank: #2</p>
        <p>🗑 Waste Collected: 130 kg</p>
        <p>🎖 Badges Earned: Green Hero</p>
      </div>
      <img class="leaderboard-img" src="/images/user2.jpg" alt="Jane Smith" />
    </div>
  
    <div class="leaderboard-entry">
      <div class="leaderboard-info">
        <h3>Mike Johnson</h3>
        <p>🏆 Rank: #3</p>
        <p>🗑 Waste Collected: 110 kg</p>
        <p>🎖 Badges Earned: Sustainability Star</p>
      </div>
      <img class="leaderboard-img" src="/images/user3.jpg" alt="Mike Johnson" />
    </div>
  </div>